<div class=container>
 <h1>Restaurant: <%= @restaurant.name %></h1>

 <table class="table">
   <thead>
     <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
        <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
       <tr>
         <td><%= @restaurant.name %></td>
         <td><%= @restaurant.address %></td>
         <td><%= @restaurant.phone_number %></td>
         <td><%= @restaurant.category.capitalize %></td>
       </tr>
   </tbody>
 </table>
</div>

<div class=container>
 <h1>Reviews</h1>

 <table class="table">
   <thead>
     <tr>
        <th>Review</th>
        <th>Rating</th>
        <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
       <tr>
         <td><% @restaurant.reviews.each do |review| %>
        <p><%= review.content %></p>
        <% end %></td>
        <td><% @restaurant.reviews.each do |review| %>
        <p><%=review.rating %></p>
        <% end %></td>
       </tr>
   </tbody>
 </table>
</div>

<br>

<div class=container>
<p><%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<p><%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %></p>
</div>
